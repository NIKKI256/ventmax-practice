@import url('../min.css');
@import url('../fonts.css')

$linkColor = #00D4BF

header{
    background-color: white
    .header-content{
        display flex
        justify-content: space-between

        .header-content__logo{
            max-width 232px;
            margin 5px 5px
        }

        .header-content__links{
            width 75%
            display flex
            align-items: center
            
            @media (max-width:1000px){
                display: none;
            }

            .header-content__links-item{
                position relative
                cursor pointer
                height 75px
                width 100%  
                display flex
                align-items: center
                justify-content: center
                transition: 0.5s

                .header-content__hidden-links{
                    display: none
                }

                a{
                    font-family: 'ProximaNovaRegular'
                    font-size: 18px
                    color: #555555
                    text-align: center

                    select {
                        width 100%
                        border: none
                        color: #555555
                        appearance: none;
                        background-color: transparent;
                        text-align-last:center;
                        font-family: 'ProximaNovaRegular'
                        font-size: 18px
                        cursor: inherit;
                        outline: none
                        
                        option{
                            width 100%
                        }
                    }
                }

                &:hover{
                    background-color: $linkColor    
                    a{
                        color: white
                    }
                }

                &:hover .header-content__hidden-links{
                    background-color: white
                    position absolute
                    top: 75px
                    width 100%
                    display flex
                    flex-direction: column
                    a{
                        color: #555555
                        &:hover{
                            color: $linkColor
                        }
                    }
                }
            }
        }

        .hamburger-menu{
            display: none;

            #menu__toggle {
                opacity: 0;
            }

            @media (max-width:1000px) {
                display: flex;

                .menu__btn {
                    display: flex;
                    align-items: center; 
                    position: absolute;
                    top:20px;
                    right: 30px;
                    width: 26px;
                    height: 26px;
                    cursor: pointer;
                    z-index: 1;

                    span,span::before, span::after{
                        display: block;
                        position: absolute;
                        width: 100%;
                        height: 2px;
                        background-color: #616161;
                        transition-duration: .25s;
                    }
                    span::before{
                        content: '';
                        top: -8px;
                    }
                    span::after{
                        content: '';
                        top: 8px;
                    }
                }

                .menu__box {
                    display: block;
                    position: fixed;
                    visibility: hidden;
                    top: 0;
                    right: -100%;
                    width: 300px;
                    height: 100%;
                    margin: 0;
                    padding: 80px 0;
                    list-style: none;
                    text-align: center;
                    background-color: #ECEFF1;
                    box-shadow: 1px 0px 6px rgba(0, 0, 0, .2);
                    transition-duration: .25s;
                }

                .menu__item {
                    display: block;
                    padding: 12px 24px;
                    color: #333;
                    font-family: 'Roboto', sans-serif;
                    font-size: 20px;
                    font-weight: 600;
                    text-decoration: none;
                    transition-duration: .25s;

                    &:hover {
                        background-color: #00D4BF;
                    }
                }

                #menu__toggle:checked ~ {
                    .menu__box {
                        visibility: visible;
                        right:  0;
                    }
                    .menu__btn > span {
                        transform: rotate(45deg);
                    }
                    .menu__btn > span::before {
                        top: 0;
                        transform: rotate(0);
                    }
                    .menu__btn > span::after {
                        top: 0;
                        transform: rotate(90deg);
                    }
                }
            }   
        } 
    }
}

