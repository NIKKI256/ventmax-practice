                        background-color: transparent;
                        text-align-last:center;
                        font-family: 'ProximaNovaRegular'
                        font-size: 18px
                        cursor: inherit;
                        outline: none
                        
                        option{
                            width 100%
                        }
                    }
                }

                &:hover{
                    background-color: $linkColor    
                    a{
                        color: white
                    }
                }

                &:hover .header-content__hidden-links{
                    background-color: white
                    position absolute
                    top: 68px
                    width 100%
                    height: 260px
                    display flex
                    align-items: center
                    text-align: center
                    flex-direction: column
                    text-transform: none
                    a{
                        margin-top 30px
